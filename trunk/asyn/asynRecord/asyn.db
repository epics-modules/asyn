record(bo,"$(ioc):P$(port):A$(addr):Enable") {
    field(DTYP,"asynEnable")
    field(OUT,"@$(port),$(addr)")
    field(ZNAM,"disable")
    field(ONAM,"enable")
    field(PINI,"YES")
}
record(bo,"$(ioc):P$(port):A$(addr):AutoConnect") {
    field(DTYP,"asynAutoConnect")
    field(OUT,"@$(port),$(addr)")
    field(ZNAM,"noAutoConnect")
    field(ONAM,"AutoConnect")
    field(PINI,"YES")
}
record(bo,"$(ioc):P$(port):A$(addr):Connect") {
    field(DTYP,"asynConnect")
    field(OUT,"@$(port),$(addr)")
    field(ZNAM,"disconnect")
    field(ONAM,"connect")
    field(PINI,"YES")
}
