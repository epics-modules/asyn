record(bi,"$(ioc):P$(port):A$(addr):ConnectState") {
    field(DTYP,"asynState")
    field(INP,"@$(port),$(addr)")
    field(ZNAM,"no")
    field(ONAM,"yes")
    field(PINI,"YES")
    field(MASK,"0x1")
}
