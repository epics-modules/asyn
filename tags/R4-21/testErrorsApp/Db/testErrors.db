###################################################################
#  These records control turning error status on and off          # 
###################################################################
record(mbbo, "$(P)StatusReturn")
{
    field(PINI,  "1")
    field(DTYP, "asynInt32")
    field(OUT,  "@asyn($(PORT),$(ADDR),$(TIMEOUT))STATUS_RETURN")
    field(ZRST, "Junk")
    field(ZRVL, "0")
}

